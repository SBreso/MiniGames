<Window x:Class="MiniGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:MiniGames.UIGames.Properties;assembly=MiniGames.UIGames"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.MINI_GAME_TITLE}" Height="444" Width="666" Loaded="Window_Loaded">

    <DockPanel>
        <Menu x:Name="menu" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Name="menuNew" Header="{x:Static p:Resources.NEW_GAME}"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="statuBar"/>
            </StatusBarItem>
        </StatusBar>
        <DockPanel>

        </DockPanel>
    </DockPanel>

</Window>
